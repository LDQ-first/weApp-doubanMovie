<import src="../search/search.wxml"/>
<import src="../more/more.wxml"/>
<import src="../movies-list/movies-list.wxml" />

<template name="movies">
    <view class="page">
        <view class="head">
            <template is="search" data="{{searchPanelShow, searchCloseShow}}"/>
            <template is="more" />
        </view>
        <template is="{{searchPanelShow ? 'searchList' : 'moviesList'}}" 
        data="{{title:title, list:list, searchData: searchData}}"/>
    </view>
</template>