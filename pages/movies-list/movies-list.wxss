@import '../movie/movie.wxss';


.main {
    flex: 1;
}

.main .title{
    height: 70rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 40rpx;
}

.searchResult {
    padding: 5rpx 0 20rpx;
    font-weight: bold;
}

.searchResult .title{
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 40rpx;
}

.searchResult .movie-title {
    font-size: 40rpx;
}

.searchResult .main-list {
    display: flex;
    text-align: center;
    padding: 0 22rpx;
    
}

.searchResult .main-list .list-img {
    padding-bottom: 0;
    box-shadow: 0 0px 4px 0 rgba(17, 66, 95, 0.4),
                0 3px 7px 0 rgba(17, 66, 95, 0.2);
}

.searchResult .main-list+.main-list {
    padding-top: 20rpx;
}

.searchResult .main-list .stars .stars-list {
    height: 40rpx;
    margin-bottom: 10rpx;
}

.searchResult .main-list .stars .stars-list .star-img {
     height: 40rpx;
     width: 40rpx;
}

.searchResult .main-list .stars .average {
    display:flex;
    align-items:center;
    font-size: 40rpx;
}

.searchResult .main-list .otherInfo {
    font-size: 30rpx;
}

